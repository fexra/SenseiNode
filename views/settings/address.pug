extends ../includes/layout_default

block content
  include includes/head

  form(method='post' action='/settings/address')
    section.box.has-background-white.has-text-centered
      .field
        .control.has-icons-left
          input.input.is-large(type='text' name='address' placeholder='enter lcx address')
          span.icon.is-large.is-left
            i.icon-wallet

      if user.verified === 1

        .field
          .control.has-icons-left
            input.input.is-large.has-text-centered(type='text' name='token' placeholder='000000')
            span.icon.is-large.is-left
              i.icon-key
      
    .level
      .level-left
        a.button.is-large.is-danger.is-outlined(href='/settings/') Cancel
      .level-right
        button.button.is-large.is-success.is-outlined(type='submit') Update
